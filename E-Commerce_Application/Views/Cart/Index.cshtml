
@{
	ViewData["Title"] = "Cart";
}
<h2 id="counter"></h2>



<div class="row">
	<ul id="cart" class="list-unstyled list-group col-sm">
		@foreach(var cartItem in ViewBag.CartItems)
		{
			<li class="list-group-item">@cartItem.Product.Name</li>
		}
	</ul>
<div class="col-sm-3">
	<span>Order Cost: <span id ="orderTotal"></span></span>
	<span>Credit Card: </span>
	<button class="btn btn-primary">Place Order</button>
</div>


</div>