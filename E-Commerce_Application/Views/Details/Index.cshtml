@{
	ViewData["Title"] = "Details";
	var product = ViewBag.Product;

}

<div class ="container-fluid">

<div class="row">
	<img class= "col-sm-6" src ="~/Images/@product.ImgName" alt=""/>
	<div class="col">
		<h2 class="text-center">@product.Name</h2>
		<p>@product.Description</p>
		<form>
				@foreach(Category category in ViewBag.categories)
				{
					if(category.Id == product.CategoryID)
					{
						foreach(Size size in category.Sizes)
						{
							<input id ="size" type ="radio" name="size" value="@size.SizeType"/>
						}
					}
				}
			
			<input id="itemId" name="itemId" type="hidden" value="@product.Id"/>
			<input id = "name" name="name" type = "hidden" value="@product.Name" />
			<input id = "quantity" name="quantity" type ="number"/>
			<button onClick ="submitCartItem">Add to Cart</button>
		</form>
	</div>
</div>

<p id="addedItem" class="hidden bg-success">
	Added item to the cart!
</p>

<div>
	<h3 class="">Reviews</h3>
	<ul class="list-group list-unstyled">
		@foreach (Review review in ViewBag.Reviews)
		{
			<li class="list-group-item">
				<h4 class="fw-bold">@review.UserName</h4>
				<p>
					@review.CommentText
				</p>
			</li>
		}
	</ul>
</div>
</div>