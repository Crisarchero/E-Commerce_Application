@{
	ViewData["Title"] = "Details";
	var product = ViewBag.Product;

}

<div class ="container-fluid">

<div class="row">
	<img class= "col-sm-6" src ="~/Images/@product.ImgName" alt=""/>
	<div class="col">
		<h2 class="text-center">@product.Name</h2>
		<p>@product.Description</p>
		<form asp-controller = "Cart" asp-action="Add" method="post">
				@foreach(Category category in ViewBag.categories)
				{
					if(category.Id == product.CategoryID)
					{
						foreach(Size size in category.Sizes)
						{
							<input class="rounded-circle" id="size" type="radio" name="size" value="@size.Number|@size.SizeType" required />
							<label class="me-1" for="size">@size.SizeType</label>
							
						}
					}
				}
			<input class="form-control w-25" id = "quantity" name="quantity" type ="number"/>
			<input  id="id" name="id" type="hidden" value="@product.Id"/>

			<button type = "submit">Add to Cart</button>
		</form>
	</div>
</div>

<p id="addedItem" class="bg-success text-white visually-hidden">
	Added item to the cart!
</p>

<div>
	<h3 class="">Reviews</h3>
	<ul class="list-group list-unstyled">
		@foreach (Review review in ViewBag.Reviews)
		{
			<li class="list-group-item">
				<h4 class="fw-bold">@review.UserName</h4>
				<p>
					@review.CommentText
				</p>
			</li>
		}
	</ul>
</div>
</div>